var _mil <- 1000;
var i <- 1;
var maxl <- 1;
var maxi <- 1;
var temp <- 1;
var x <- 1;
while i <= _mil
do
    x <- i;
    temp <- 1;
    while x != 1
    do
        if x%2 == 0
        then x <- x//2;
        else x <- 3*x+1;
        endif;
        temp <- temp + 1;
    endwhile;
    if temp > maxl
    then maxl <- temp; maxi <- i; endif;
    i <- i+1;
endwhile;
print maxi;
print maxl;



